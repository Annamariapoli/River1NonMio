<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.65" fx:controller="application.SampleController">
   <top>
      <Label text="Rivers" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Label text="Scegli un fiume" />
                  <ComboBox fx:id="comboFiume" prefWidth="150.0" />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Prima data" />
                  <TextField fx:id="txtPrima" editable="false" />
                  <Label text="Ultima data" />
                  <TextField fx:id="txtUltima" editable="false" />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </HBox>
            <HBox>
               <children>
                  <Label text="Num miure" />
                  <TextField fx:id="txtNMisure" editable="false" />
                  <Label text="F med" />
                  <TextField fx:id="txtFMed" editable="false" />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </HBox>
            <HBox>
               <children>
                  <Label text="Fattore di scala" />
                  <TextField fx:id="txtFattore" />
                  <Button fx:id="btnSimula" mnemonicParsing="false" onAction="#doSimula" text="Simula" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <TextArea fx:id="txtRisult" editable="false" />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
